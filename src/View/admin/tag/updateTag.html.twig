{% extends "admin/template/baseAdmin.html.twig" %}
{% block css %}<link href="css/stylesadmin.css" rel="stylesheet" />{% endblock %} 
{% block title %}Dashboard{% endblock %}    
    
{% block content %}
    <div class="container mt-4">
        <div id="layoutSidenav_content">       
            <form method="post" action="">
                <div class="form-group border border-info mb-5 p-5 ml-5 mr-5">
                    <div class="text-center mb-4"><h2 class="fw-bold">Modification d'un tag</h2></div>
                    <p class="lead fw-bold">
                        Tag :
                        <input class="form-control" type="text" name="name" placeholder="Nom" value ="{{tag.name}}">
                    </p>
                    <p class="lead fw-bold">
                        Slug :              
                    <input class="form-control" type="text" name="slug" placeholder="Slug" value ="{{tag.slug}}">
                    </p>
                    <input class="form-control" type="hidden" name="id" value={{tag.id}}>
                    <input name="usertoken" type="hidden" value="{{session.get('usertoken')}}">
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
                
            </form>
        </div>
    </div>
{% endblock %}